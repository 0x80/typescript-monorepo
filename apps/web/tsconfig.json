{
  "extends": "@codecompose/typescript-config/nextjs.json",
  "compilerOptions": {
    "composite": true,
    "plugins": [
      {
        "name": "next" // plugin comes installed with nextjs
      }
    ]
  },
  "include": [
    "${configDir}",
    "${configDir}/**/*.json",
    "${configDir}/next-env.d.ts",
    "${configDir}/.next/types/**/*.ts",
    ".next/types/**/*.ts"
  ],
  "references": [
    { "path": "../../packages/common" },
    { "path": "../../packages/core" }
  ]
}
